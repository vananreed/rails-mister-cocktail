<div class="banner">
  <h1 class="title">All Drinks</h1>
</div>

<div class="cards-container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image:
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400 %>')">
            <div class="cocktail-name"><%= cocktail.name %></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-center">

    <%= link_to new_cocktail_path, class: "button" do %>
      <i class='fas fa-plus'></i>Create New Cocktail
    <% end %>
</div>
